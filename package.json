{
  "name": "pos-soft",
  "productName": "POS Soft",
  "version": "1.0.0",
  "description": "A point of sale system built using ElectronJS, ReactJS and SQLite3",
  "main": "main.js",
  "build": {
    "files": [
      "**/*",
      "build"
    ],
    "win": {
      "icon": "./build/pos.ico"
    }
  },
  "scripts": {
    "watch": "webpack --config webpack.common.js --watch",
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "serverwatch": "electronmon main.js",
    "dist_win": "electron-builder --win --x64",
    "dist_linux": "electron-builder",
    "dist_mac": "electron-builder --mac --x64"
  },
  "author": "Abdelaziz Boudabia",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^8.4.0",
    "pdf-lib": "^1.17.1",
    "check-internet-connected": "^2.0.6",
    "electron-store": "^8.1.0",
    "gsap": "^3.12.2",
    "mongoose": "^7.3.2",
    "react": "^18.2.0",
    "react-data-table-component": "^7.5.3",
    "react-dom": "^18.2.0",
    "react-icons": "^4.6.0",
    "react-live-clock": "^6.1.0",
    "react-router-dom": "^6.4.3",
    "xlsx": "^0.18.5",
    "use-scan-detection": "^0.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.7.2",
    "electron": "^21.2.3",
    "electron-builder": "^23.6.0",
    "file-loader": "^6.2.0",
    "img-loader": "^4.0.0",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.3.9",
    "url-loader": "^4.1.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^4.10.0",
    "webpack-obfuscator": "^3.5.1"
  }
}
